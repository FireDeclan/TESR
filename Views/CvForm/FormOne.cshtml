@model DelicateCV.Models.CvFormViewModel
@{
    ViewBag.Title = "Details form";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
          crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/b38ccccf84.js"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/cv-form.css" />
    <title>CV Form | DelicateCV</title>
</head>
<body>
    <!-- Nav section -->
    <nav class="navbar navbar-expand-lg sticky-top navbar-dark bg-dark">
        <a class="navbar-brand pl-5" href="#">Delicate<span class="logo">CV</span></a>
        <button class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#indexnav"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="indexnav">
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="index.html">Home <span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
    </nav>
    <h2 class="h2 text-center pt-5">Create your Resume in just one step</h2>
    <div class="container w-75 cv-form-container">
        <form class="w-75 mx-auto cv-form" asp-action="CvOne" asp-controller="CvGeneration" method="POST">
            <p>Fields marked * are compulsory</p>
            <!-- basic-details-summary -->
            <section class="basic-details">
                <h3 class="h3">Basic Details</h3>
                <div class="form-group row">
                    <label asp-for="Fullname" class="col-sm-6 col-form-label">Full Name*</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="fullname" id="fullname" asp-for="Fullname" required />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-6 col-form-label">Email*</label>
                    <div class="col-sm-6">
                        <input type="email" class="form-control" name="email" id="email" asp-for="Email" required />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Phone" class="col-sm-6 col-form-label">Phone*</label>
                    <div class="col-sm-6">
                        <input type="number" class="form-control" name="phone" id="phone" asp-for="Phone" required />
                    </div>
                </div>
            </section>
            <!-- profile-summary-section -->
            <section class="profile-summary">
                <h3 class="h3">Summary</h3>
                <div class="form-group row">
                    <label class="col-sm-6 col-form-label" asp-for="Summary">Profile Summary*</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="summary" rows="3" name="summary" asp-for="Summary" required></textarea>
                    </div>
                </div>
            </section>
            <!-- skills-section -->
            <section class="skills">
                <h3 class="h3">Skills</h3>
                <small>(Enter your skills as a comma separated list)</small>
                <div class="form-group row">
                    <label asp-for="Skills" class="col-sm-6 col-form-label">Skills*</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="skills" name="skills" asp-for="Skills" required />
                    </div>
                </div>
            </section>
            <!-- education-section -->
            <section class="education">
                <h3 class="h3">Education</h3>
                <div class="form-group row">
                    <label asp-for="Institution" class="col-sm-6 col-form-label">Institution Attended*</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="institution" name="institution" asp-for="Institution" required />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Course" class="col-sm-6 col-form-label">Course of study*</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="course" name="course" asp-for="Course" required />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="GradYear" class="col-sm-6 col-form-label">Graduation Year*</label>
                    <div class="col-sm-6">
                        <input type="datetime-local" class="form-control" id="gradYear" placeholder="YYYY" name="gradYear" asp-for="GradYear" required />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Degree" class="col-sm-6 col-form-label">Degree Obtained*</label>
                    <div class="col-sm-6">
                        <select class="form-control" id="degree"  asp-for="Degree" required>
                            <option value="B.Sc">B.Sc</option>
                            <option  value="M.Sc">M.Sc</option>
                            <option  value="MBA">MBA</option>
                            <option  value="PhD">PhD</option>
                            <option  value="Diploma">Diploma</option>
                        </select>
                    </div>
                </div>
            </section>
            <!-- experience section -->
            <section class="experience">
                <h3 class="h3">Experience</h3>
                <div class="form-group row">
                    <label asp-for="Company" class="col-sm-6 col-form-label">Company Name*</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="company" name="company" asp-for="Company" required />
                    </div>
                </div>
                <div class="form-group row">
                    <labe asp-for="JobTitle" class="col-sm-6 col-form-label">Job Title*</labe>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="jobTitle" name="jobTitle" asp-for="JobTitle" required />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ExperienceStart" class="col-sm-6 col-form-label">Start date*</label>
                    <div class="col-sm-6">
                        <input type="date" class="form-control" id="experienceStart" name="experienceStart" placeholder="MM/YYYY" asp-for="ExperienceStart" required />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ExperienceEnd" class="col-sm-6 col-form-label">End date*</label>
                    <div class="col-sm-6">
                        <input type="date" class="form-control" id="experienceEnd" name="experienceEnd" placeholder="MM/YYYY" asp-for="ExperienceEnd" required />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Duties" class="col-sm-6 col-form-label">Duties</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="duties" name="duties" placeholder="Enter duties as comma separated values" asp-for="Duties" />
                    </div>
                </div>
            </section>
            <!-- languages-section -->
            <section class="languages">
                <h3 class="h3">Languages</h3>
                <div class="form-group row">
                    <label asp-for="Languages" class="col-sm-6 col-form-label">Language(s)</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="languages" name="languages" asp-for="Languages" placeholder="Enter language(s) as comma separated values" />
                    </div>
                </div>
            </section>
            <section class="certifications">
                <h3 class="h3">Certifications</h3>
                <div class="form-group row">
                    <label asp-for="Certifications" class="col-sm-6 col-form-label">Certification</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="certifications" id="certifications" asp-for="Certifications" />
                    </div>
                </div>
            </section>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-success">Create Cv</button>
                </div>
            </div>
        </form>
    </div>
    <!-- footer -->
    <section class="footer">
        <div class="container footer-main text-muted">
            <div class="row">
                <div class="col footer_content">
                    <p style="border-bottom: 1px solid white;"></p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm footer_list">
                    <ul>
                        <li>Delicate<span class="logo">CV</span></li>
                        @* <li><a href="#">Categories</a></li> *@
                        <li><a asp-action="Index" asp-controller="TemplateSelection">CV Templates</a></li>
                        @* <li><a href="#">Developers</a></li> *@
                    </ul>
                </div>
                <div class="col-sm footer_list">
                    <ul>
                        <li>About</li>
                        <li><a asp-action="Index" asp-controller="Home">How it works</a></li>
                        @* <li><a href="#">Security</a></li> *@
                        @* <li><a href="#">Terms of service</a></li> *@
                        @* <li><a href="#">Privacy policy</a></li> *@
                        @* <li><a href="#">News</a></li> *@
                        @* <li><a href="#">Fees and charges</a></li> *@
                    </ul>
                </div>
                <div class="col-sm footer_list">
                    <ul>
                        <li>Browse</li>
                        @* <li><a href="#">Jobs in Nigeria</a></li> *@
                        <li><a href="https://jobberman.com">Find jobs</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md">
                    @* <span>Follow us</span> *@
                    @* <i class="fab fa-facebook"></i> *@
                    @* <i class="fab fa-twitter mx-3"></i> *@
                    @* <i class="fab fa-instagram"></i> *@
                    @* <i class="fab fa-linkedin-in mx-3"></i> *@
                    @* <p style="border-top: 1px solid white;"></p> *@
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
                integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
                integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
                crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
                integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
                crossorigin="anonymous"></script>
        <script src="~/js/signin.js"></script>
    </section>
</body>
</html>