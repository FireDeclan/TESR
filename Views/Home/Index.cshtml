@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="css/index.css">
    <script src="https://kit.fontawesome.com/b38ccccf84.js"
            crossorigin="anonymous"></script>
    <title>Delicate CV</title>
</head>
<body>
    <!-- Nav section -->
    <nav class="navbar navbar-expand-lg sticky-top navbar-dark bg-dark">
        <a class="navbar-brand pl-5" asp-action="Index" asp-controller="Home">Delicate<span class="logo">CV</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#indexnav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="indexnav">
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Index" asp-controller="Home">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="TemplateSelection" class="btn btn-outline-success my-2 my-sm-0">CreateCV</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Top Section -->
    <section class="container-fluid top-section">
        <div class="row">
            <div class="col-md-6 pl-5 d-flex flex-column justify-content-center align-items-start landing-intro-left">
                <h1 class="h1">Get hired fast with a resume that catches the eye</h1>
                <p>Create a standout resume, tailored to your job application requirements in minutes</p>
                <a asp-action="Index" asp-controller="TemplateSelection" class="btn btn-lg btn-success">Try DelicateCV now</a>
            </div>
            <div class="col-md-6 px-0" id="intro">
                <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="images/office1.jpg" class="d-block w-100 carousel-img" alt="carouselimage">
                        </div>
                        <div class="carousel-item">
                            <img src="images/img2.jpg" class="d-block w-100 carousel-img" alt="carouselimage">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- call to action -->
    <section class="top-mid-section">
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-1">
                    <h3 class="h3">
                        A resume that gets noticed is a CV that lands interviews.
                    </h3>
                    <p>
                        Choose from our variety of CV templates and create a CV that shows your personality. Are you a student, web developer, or an engineer? We have a template for everyone.
                    </p>
                </div>
                <div class="col-md-5 col-sm-5">
                    <img class="img img-fluid resume-img" src="images/resume.png" alt="resume-img">
                </div>
            </div>
        </div>
    </section>
    <section class="middle-mid-section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="images/template.svg" alt="builder-img" class="img img-fluid desc-img">
                    <h4 class="h4">Templates</h4>
                    <p>CV templates built by our engineers</p>
                </div>
                <div class="col-md-4 text-center">
                    <img src="images/time.svg" alt="builder-img" class="img img-fluid desc-img">
                    <h4 class="h4">Timesaver</h4>
                    <p>Save time and effort and take your CV to the next level in just minutes</p>
                </div>
                <div class="col-md-4 text-center">
                    <img src="images/builder.svg" alt="builder-img" class="img img-fluid desc-img">
                    <h4 class="h4">Builder</h4>
                    <p>Create an awesome CV and land your dream job</p>
                </div>
            </div>
        </div>
    </section>
    <section class="bottom-mid-section">
        <div class="container">
            <div class="row">
                <div class="col-md-5 bottom-mid-section__img-container">
                    <img class="img img-fluid resume-img" src="images/img3.png" alt="ad-img">
                </div>
                <div class="col-md-6 offset-1">
                    <h3 class="h3">
                        Choose from our CV samples to help you land your dream job
                    </h3>
                    <p>
                        Follow your dreams and apply for that job you've always dreamed of with full confidence knowing you have an amazing CV to make you standout
                    </p>
                </div>
            </div>
        </div>
    </section>


    <!-- footer -->
    <section class="footer">
        <div class="container footer-main text-muted">
            <div class="row">
                <div class="col footer_content">
                    <p style="border-bottom: 1px solid white;"></p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm footer_list">
                    <ul>
                        <li>Delicate<span class="logo">CV</span></li>
                        @* <li><a href="#">Categories</a></li> *@
                        <li><a asp-action="Index" asp-controller="TemplateSelection">CV Templates</a></li>
                        @* <li><a href="#">Developers</a></li> *@
                    </ul>
                </div>
                <div class="col-sm footer_list">
                    <ul>
                        <li>About</li>
                        <li><a asp-action="Index" asp-controller="Home">How it works</a></li>
                        @* <li><a href="#">Security</a></li> *@
                        @* <li><a href="#">Terms of service</a></li> *@
                        @* <li><a href="#">Privacy policy</a></li> *@
                        @* <li><a href="#">News</a></li> *@
                        @* <li><a href="#">Fees and charges</a></li> *@
                    </ul>
                </div>
                <div class="col-sm footer_list">
                    <ul>
                        <li>Browse</li>
                        @* <li><a href="#">Jobs in Nigeria</a></li> *@
                        <li><a href="https://jobberman.com">Find jobs</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md">
                    @* <span>Follow us</span> *@
                    @* <i class="fab fa-facebook"></i> *@
                    @* <i class="fab fa-twitter mx-3"></i> *@
                    @* <i class="fab fa-instagram"></i> *@
                    @* <i class="fab fa-linkedin-in mx-3"></i> *@
                    @* <p style="border-top: 1px solid white;"></p> *@
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
                integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
                integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
                crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
                integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
                crossorigin="anonymous"></script>
</section>
</body>
</html>